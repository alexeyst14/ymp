{% extends "AvkdevYmParserBundle::layout.html.twig" %}

{% block body -%}
    <h1>Задача</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Категория</th>
                <td>{{ entity.category }}</td>
            </tr>
            <tr>
                <th>Создано</th>
                <td>{{ entity.createDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Время запуска</th>
                <td>{{ entity.runDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Статус</th>
                <td>{{ entity.statusString }}</td>
            </tr>
            <tr>
                <th>Тех. информация</th>
                <td>{{ entity.progressStatusStr }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('task') }}">
            Вернуться к списку
        </a>
    </li>
    <li>
        <a href="{{ path('task_edit', { 'id': entity.id }) }}">
            Редактировать
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
